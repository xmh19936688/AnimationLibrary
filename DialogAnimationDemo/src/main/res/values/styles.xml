<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--windowIsFloating：弹出窗浮在上层-->
    <!--windowBackground：弹出窗背景透明-->
    <style name="dialog_style">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--windowExitAnimation：弹出窗退出时动画-->
    <style name="dialog_style_with_anim_exit" parent="dialog_style">
        <item name="android:windowExitAnimation">@anim/dialog_dismiss_anim</item>
    </style>

</resources>
